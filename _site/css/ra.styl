/* Responsive App base css
 * 
 * Controls full screen responsive layout
 * To edit styles, edit style.css
 *
 */

/* 
 * Default panel width 284px
 * override in ra.js options
 */
panelsize = 284px

/* normalize */
html, body
  margin 0
  height 100%
  width 100%
  max-width 100%
  position relative
  overflow hidden

h1
  font-size 2em

img
  border 0

/* responsive-app elements */
#ra-viewport
  position absolute
  width 100%
  height 100%
  overflow hidden

/* ra-container element contains all other elements
 * 
 * The ra framework uses css transforms to move the container
 * to show and hide off screen panels
 *
 * The container element will have .ra-small or .ra-large classes
 * depending on screen size
 *
 */
#ra-container
  position absolute
  left 0px
  width 100%
  height 100%

/* ra-panel1 is positioned on the left and is hidden when screen size is small
 */
#ra-panel-l
  position absolute
  width panelsize
  height 100%

/* ra-headmatter element contains the header, subheader, and nav
 * 
 * The ra framework will move the headmatter from to top of the screen or 
 * the top of panel1-content depending on screen size
 * 
 * ra-main-responsivemenu only appears when screen is small
 * contains buttons to show and hide side panels
 */
#ra-headmatter
#ra-main-responsivemenu
  width 100%
  overflow auto

/* responsivemenu button shows/hides left panel on click
 */
#ra-responsivemenu-btn-l
  position absolute
  left 0
  top 0
/* responsivemenu button shows/hides right panel on click
 */
#ra-responsivemenu-btn-r
  position absolute
  right 0
  top 0
#ra-responsivemenu-header
  display inline
  text-align center

/* main full screen content */
#ra-main
  position absolute
  overflow-y auto
  height 100%
  width 100%

/* right/bottom panel
 * appears at bottom of screen on large screens
 * hidden on right on small screens
 */
#ra-panel-r
  position absolute
  bottom 0
#ra-panel-r-content
  overflow-y auto
  float right

/* ra-cover covers the main content on small screens when side panels are open
 * clicking on the cover returns the view to the main content
 */
#ra-cover
  position absolute
  opacity 0
  width 100%
  height 100%

/* large screens */
.ra-large
  #ra-main
    left panelsize
  #ra-panel-l
    left 0
  #ra-panel-l-content
    height inherit
    overflow-y auto
  #ra-panel-r
    left panelsize
    min-height 0
    width 100%
  #ra-panel-r-content
    /* default max height for panel when at screen bottom */
    max-height 150px   
  #ra-responsivemenu
    display none
  .ra-hidewhenlarge
    display none !important

/* small screens */
.ra-small
  #ra-main
    left 0
  #ra-panel-l
    right 100%
    overflow-y auto
    height 100%
  #ra-panel-l-content
    height 100%
  #ra-panel-r
    width panelsize
    height 100%
    left 100%
  #ra-panel-r-content
    height 100%
  .ra-hidewhensmall
    display none !important

/* full screen mode */
.ra-fullscreen
  #ra-panel-l
    display none
  #ra-panel-r
    display none
  #ra-headmatter
    display none
  #ra-responsivemenu
    display none


/* hiding elements */
.ra-hidden
  display none !important
  
/* clearfix */
.clearfix:before,
.clearfix:after 
  content ''
  display table
.clearfix:after 
  clear both
/* ie7 */
.clearfix
  zoom 1

/* basic styling for button divs */
.ra-btn
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  cursor: default